<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/genshinimpac"
    tools:context=".UI.MainActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="332dp"
        android:layout_height="131dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txt_title"
        android:layout_width="163dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:background="#1DFFFFFF"
        android:fontFamily="@font/henny_penny"
        android:text="Creado por miHoyo"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnPrimaryContainer"
        android:textColorHighlight="?attr/colorControlHighlight"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo" />


    <Button
        android:id="@+id/btn_go_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="25dp"
        android:fontFamily="casual"
        android:paddingVertical="16dp"
        android:text="Ingresa al Nuevo Mundo"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>